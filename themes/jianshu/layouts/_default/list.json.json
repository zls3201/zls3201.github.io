{{ define "response" }}
    {
        {{ with eq .Kind  "section"}}
            "section" : "{{ $.Section }}",
        {{ end }}
        {{ with eq .Kind  "taxonomy"}}
            "taxonomy" : "{{ $.Data.Singular }}",
            "term" : "{{ $.Data.Term }}",
        {{ end }}
        "count" : "{{ len .Data.Pages }}",
        "items" : [
			{{ range $i, $e := .Data.Pages }}
				{
					"title": "{{ .Title }}",
					"date": "{{ .Date }}",
					"type": "{{ .Type }}",
					"permalink" : "{{ .Permalink }}",
					"summary" : "{{ .Summary }}",
					"Content" : {{ .Content  |jsonify  }}
				}
				{{ if $i }} , {{ end }}
			{{ end }}
        ]
    }
{{ end }}